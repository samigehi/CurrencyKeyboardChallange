<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="keyboard_digit_key_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@drawable/keyboard_key_text_selector</item>
        <item name="android:background">@drawable/keyboard_button_selector</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="keyboard_del_key_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">32dp</item>
        <item name="backgroundTint">@null</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="android:background">@drawable/keyboard_button_selector</item>
    </style>

</resources>